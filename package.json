{
	"name": "code-annotation",
	"displayName": "Code Annotation",
	"description": "Create notes on your source code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:codeAnnotationView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "code-annotation.addNote",
				"title": "Code Annotation: Add note"
			},
			{
				"command": "code-annotation.refreshEntry",
				"title": "Code Annotation: Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "code-annotation.addNote",
					"title": "Code Annotation: Add note"
				}
			],
			"view/title": [
				{
					"command": "code-annotation.refreshEntry",
					"when": "view == codeAnnotationView",
					"group": "navigation"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "codeAnnotationView",
					"name": "Code Annotation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"vscode-uri": "^2.1.2"
	}
}
